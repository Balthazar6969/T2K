package highland2/antiNumuCCIncFwdAnalysis
version v1r1

manager Patrick Koller <patrick.koller@lhep.unibe.ch>
author nd280-software@mailman.t2k.org

branches cmt src doc app parameters

use antiNumuCCAnalysis * highland2

# Build methods to include.
document doxygen doxygen -group=documentation src/*.cpp src/*.h src/*.hxx src/*.cxx ../doc/*.dox

# Build information used by packages that use this one.
macro antiNumuCCIncFwdAnalysis_cppflags " -DANTINUMUCCINCFWDANALYSIS_USED"
macro antiNumuCCIncFwdAnalysis_linkopts " -L$(ANTINUMUCCINCFWDANALYSISROOT)/$(antiNumuCCIncFwdAnalysis_tag) -lantiNumuCCIncFwdAnalysis "
macro antiNumuCCIncFwdAnalysis_stamps " $(ANTINUMUCCINCFWDANALYSISROOT)/$(antiNumuCCIncFwdAnalysis_tag)/antiNumuCCIncFwdAnalysis.stamp"

# The paths to find this library.
path_remove PATH "$(ANTINUMUCCINCFWDANALYSISROOT)"
path_prepend PATH "$(ANTINUMUCCINCFWDANALYSISROOT)/$(antiNumuCCIncFwdAnalysis_tag)"
path_remove LD_LIBRARY_PATH "$(ANTINUMUCCINCFWDANALYSISROOT)"
path_prepend LD_LIBRARY_PATH "$(ANTINUMUCCINCFWDANALYSISROOT)/$(antiNumuCCIncFwdAnalysis_tag)"
path_remove DYLD_LIBRARY_PATH "" \
            Darwin            "$(ANTINUMUCCINCFWDANALYSISROOT)"
path_prepend DYLD_LIBRARY_PATH "" \
             Darwin            "$(ANTINUMUCCINCFWDANALYSISROOT)/$(antiNumuCCIncFwdAnalysis_tag)"


# The library to build
library antiNumuCCIncFwdAnalysis *.cxx  ../dict/*.cxx

application RunAntiNumuCCIncFwdAnalysis ../app/RunAntiNumuCCIncFwdAnalysis*.cxx

# tests
document doxygen doxygen -group=documentation ../scripts/* ../doc/*.dox
